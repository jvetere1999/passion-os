# Ignition - Production Environment Variables
#
# Copy this file to .env and configure ALL required variables
# DO NOT commit .env to version control
#
# SECURITY: All variables marked REQUIRED must be set

# ============================================================================
# Database (REQUIRED)
# ============================================================================
POSTGRES_USER=ignition
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
POSTGRES_DB=ignition

# ============================================================================
# Image Version (REQUIRED)
# ============================================================================
IMAGE_TAG=v1.0.0

# ============================================================================
# Auth (REQUIRED)
# ============================================================================
AUTH_COOKIE_DOMAIN=ecent.online
SESSION_SECRET=<CHANGE_ME_CRYPTOGRAPHIC_RANDOM_32_CHARS>

# ============================================================================
# OAuth - Google (REQUIRED)
# ============================================================================
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# ============================================================================
# OAuth - Azure (REQUIRED)
# ============================================================================
AZURE_CLIENT_ID=<YOUR_AZURE_CLIENT_ID>
AZURE_CLIENT_SECRET=<YOUR_AZURE_CLIENT_SECRET>
AZURE_TENANT_ID=<YOUR_AZURE_TENANT_ID>

# ============================================================================
# CORS (REQUIRED)
# ============================================================================
CORS_ALLOWED_ORIGINS=https://ignition.ecent.online,https://admin.ignition.ecent.online

# ============================================================================
# Storage - R2 (REQUIRED)
# ============================================================================
STORAGE_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
STORAGE_BUCKET=ignition
STORAGE_ACCESS_KEY_ID=<R2_ACCESS_KEY>
STORAGE_SECRET_ACCESS_KEY=<R2_SECRET_KEY>
STORAGE_REGION=auto

