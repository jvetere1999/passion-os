# Ignition - Local Development Environment
#
# Copy this file to .env and customize as needed
# DO NOT commit .env to version control

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_USER=ignition
POSTGRES_PASSWORD=ignition_dev
POSTGRES_DB=ignition
POSTGRES_PORT=5432

# ============================================================================
# Storage (MinIO - local R2 substitute)
# ============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ============================================================================
# Backend API
# ============================================================================
API_PORT=8080
SERVER_ENVIRONMENT=development
AUTH_COOKIE_DOMAIN=localhost

# Session secret (change in production!)
SESSION_SECRET=local-dev-secret-change-in-prod

# Dev bypass (ONLY for local development)
AUTH_DEV_BYPASS=false

# ============================================================================
# OAuth Credentials (leave empty for dev bypass mode)
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# ============================================================================
# CORS
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Frontend/Admin (development only)
# ============================================================================
FRONTEND_PORT=3000
ADMIN_PORT=3001

# ============================================================================
# Image Tags (for versioning)
# ============================================================================
IMAGE_TAG=latest

